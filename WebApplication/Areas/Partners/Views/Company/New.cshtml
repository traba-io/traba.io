@model CompanyViewModel

@{
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cadastrar uma empresa</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <!-- /.card-header -->
        <div class="card-body">
            <form id="newCompanyForm" role="form" method="post">
                <div class="row">
                    <div class="col-sm-6">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Nome*</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Omni Consumer Products">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Email de contato</label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="contato@omni.com">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <!-- text input -->
                        <div class="form-group">
                            <label>CNPJ*</label>
                            <input type="text" class="form-control" asp-for="Document" placeholder="12.123.123/0001-12">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label>Telefone de contato</label>
                            <input type="text" class="form-control" asp-for="Phone" placeholder="(85) 5555-5555">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <!-- text input -->
                        <div class="form-group">
                            <label>CEP</label>
                            <input type="text" id="zipCode" class="form-control" asp-for="ZipCode" placeholder="60.140-000">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Estado</label>
                            <input type="text" id="state" class="form-control" asp-for="State" placeholder="Ceará">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Cidade</label>
                            <input type="text" id="city" class="form-control" asp-for="City" placeholder="Fortaleza">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Bairro</label>
                            <input type="text" id="neighborhood" class="form-control" asp-for="Neighborhood" placeholder="Aldeota">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-3">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Rua</label>
                            <input type="text" id="street" class="form-control" asp-for="Street" placeholder="Av. Washington Soares">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Número</label>
                            <input type="text" id="streetNumber" class="form-control" asp-for="StreetNumber" placeholder="901">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <!-- text input -->
                        <div class="form-group">
                            <label>Complemento</label>
                            <input type="text" id="complementary" class="form-control" asp-for="Complementary" placeholder="Loja 1">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix">
            <a asp-area="Partners" asp-action="Index" class="btn btn-outline-primary">
                Voltar
            </a>
            <button type="submit" class="btn btn-primary" form="newCompanyForm">
                Cadastrar
            </button>
        </div>
        <!-- /.card-footer -->
    </div>
</section>
<!-- /.content -->