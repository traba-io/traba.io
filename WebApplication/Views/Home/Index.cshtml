<!-- INICIO Jobs -->
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h2 class="">
                    Vagas
                </h2>
                <span class="elementposition">
                    <img src="images/seta.png">
                </span>
            </div>
        </div>


        <div class="row">
            @foreach (var job in @Model)
            {
                <div class="col-md-4 elemente">
                    <p class="elementex">
                        @job.Company.Name<br>
                        <a asp-action="JobOpportunity" asp-route-companyNamespace="@job.Company.Namespace" asp-route-jobOpportunityUri="@job.Uri">@job.Title</a><br>
                        <span>
                            <i class="fas fa-map-marker"></i> Fortaleza - CE<br>
                            <i class="fas fa-clock"></i> segunda, 23/05
                        </span>
                    </p>
                </div>
            }
        </div>
        <br>

        <div class="text-center">
            <p class="ftco-animate mt-4">
                <a asp-action="JobOpportunities" class="btn btn-primary py-3 px-5">Mais Vagas <i class="fas fa-arrow-right"></i></a>
            </p>
        </div>

    </div>
</section>

<!-- FINAL Jobs -->

